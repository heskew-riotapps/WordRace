<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/root"
    style="@style/CreateGameDialogStyle"
    android:background="@drawable/dialog_background"
	>
 <RelativeLayout  
	style="@style/DialogInnerStyle"
    android:id="@+id/alert_top"
	>
	
    <RelativeLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/alert_background"
		android:id="@+id/header"
	>
    <TextView
         android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		style="@style/TextStyle"
        android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
    />
   <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_button"
        android:layout_alignParentRight="true"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
       
		/>
    <ImageView
        android:id="@+id/ivOpponent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alert_title"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:layout_marginTop="10dp"
		/>
    <TextView
        style="@style/TextLargeStyle"
        android:textSize="16sp"
     	android:id="@+id/alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/ivOpponent"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_below="@id/alert_title"
 		android:layout_marginTop="5dp"  

 		
 	/>
	<RelativeLayout
        android:layout_below="@id/ivOpponent"
        style="@style/CreateGameOption1AreaStyle"
        android:id="@+id/rlDash"
 
        >
	    <TextView
	        style="@style/CreateGameOption1TextStyle"
	     	android:id="@+id/tvDash"	

	 	/>
	     <TextView
	        style="@style/CreateGameOption1SubTextStyle"
	     	android:id="@+id/tvDashSubTitle"	
	     	android:layout_below="@id/tvDash"

	 	/>
    </RelativeLayout>
    
    	<RelativeLayout
        android:layout_below="@id/rlDash"
        style="@style/CreateGameOption2AreaStyle"
        android:id="@+id/rlSpeedRounds"
 
        >
	    <TextView
	        style="@style/CreateGameOption2TextStyle"
	     	android:id="@+id/tvSpeedRounds"	

	 	/>
	    <TextView
	        style="@style/CreateGameOption2SubTextStyle"
	     	android:id="@+id/tvSpeedRoundsSubTitle"	
			android:layout_below="@id/tvSpeedRounds"
	 	/>
	     <TextView
	        style="@style/CreateGameOption2PreviewTextStyle"
	     	android:id="@+id/tvSpeedRoundsPreview"	
			android:layout_below="@id/tvSpeedRoundsSubTitle"
	 	/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rlSpeedRounds"
        style="@style/CreateGameBottomOptionAreaStyle"
        android:id="@+id/rlDoubleTime"
 
        >
	    <TextView
	        style="@style/CreateGameBottomOptionTextStyle"
	     	android:id="@+id/tvDoubleTime"	

	 	/>
	    <TextView
	        style="@style/CreateGameBottomOptionSubTextStyle"
	     	android:id="@+id/tvDoubleTimeSubTitle"	
			android:layout_below="@id/tvDoubleTime"
	 	/>
	     <TextView
	        style="@style/CreateGameBottomOptionPreviewTextStyle"
	     	android:id="@+id/tvDoubleTimePreview"	
			android:layout_below="@id/tvDoubleTimeSubTitle"
	 	/>
    </RelativeLayout>
    	    	
 
  </RelativeLayout>
   </RelativeLayout>
 </LinearLayout>
